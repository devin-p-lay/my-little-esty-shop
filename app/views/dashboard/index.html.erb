<h1><%= @merchant.name %></h1>

<h3><%= link_to 'Merchant Items', merchant_items_path(@merchant) %></h3>
<h3><%= link_to 'Merchant Invoices', merchant_invoices_path(@merchant) %></h3>

<section id = "items_ready_to_ship" >
  <h4>Items Ready to Ship:</h4>
  <p><% @merchant.ordered_items_to_ship.each do |invoice_item| %>
      <li><%= invoice_item.item.name %> - Invoice #<%= link_to invoice_item.invoice_id[0], "/merchants/#{@merchant.id}/invoices/#{invoice_item.invoice_id[0]}" %>
      - Created on: <%= invoice_item.created_at.strftime("%A, %B %-d, %Y") %></li>
    <% end %>
  </p>
</section>

<section id="top_five_customers">
  <h3>Top Five Customers</h3>
  <ol>
    <% @merchant.top_five_customers.each do |customer| %>
      <li>
        Customer: <%= customer.full_name %> - Total Transactions: <%= customer.total_transactions %>
      </li>
    <% end %>
  </ol>
</section>