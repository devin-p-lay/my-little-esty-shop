<h1><%= @merchant.name %> Items:</h1>
<hr>
<%= link_to 'Create Item', new_merchant_item_path %>

<div id="enabled">
  <h5>Enabled</h5>
  <% @items.by_status('enabled').each do |item| %>
    <p><%= link_to item.name, merchant_item_path(@merchant, item) %>: <%= item.status.capitalize %></p>
    <%= button_to "Disable #{item.name}", merchant_item_status_path(@merchant, item), method: :patch, params: { status: 'disabled' } %>
  <% end %><br>
</div>

<div id="disabled">
  <h5>Disabled</h5>
  <% @items.by_status('disabled').each do |item| %>
    <p><%= link_to item.name, merchant_items_path(@merchant, item) %>: <%= item.status.capitalize %></p>
      <%= button_to "Enable #{item.name}", merchant_item_status_path(@merchant, item), method: :patch, params: { status: 'enabled' } %>
  <% end %><br>
</div>